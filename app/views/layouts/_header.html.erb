<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "home", root_url, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if current_user %>
            <font color="white"> Signed in as <%= current_user.email %> | <%= link_to "Log out", session_path("current"), :method => :delete  %></font>
          <% else %>
            <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
          <% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>